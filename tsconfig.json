{
	"compilerOptions": {
		"module": "commonjs",
		"outDir": "./build/",
		"noImplicitAny": false,
		"removeComments": true,
		"allowUnreachableCode": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"types": [
			"node"
		],
		"lib": [
			"dom",
			"es7"
		],
		"moduleResolution": "node",
		"target": "es6",
		"allowJs": true,
		"resolveJsonModule": true,
		"suppressImplicitAnyIndexErrors": true,
		"experimentalDecorators": true,
		"rootDir": "./src",
		"typeRoots": [
			"node_modules/discord.js/typings",
			"node_modules/@types"
		]
	},
	"include": [
		"./src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"bower_components",
		"jspm_packages",
		"tmp",
		"temp",
		"bin",
		"docs",
		"pkg",
		"examples"
	]
}